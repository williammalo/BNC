*
	box-sizing:border-box
body
	margin:0
	height:100%
html
	background:#F2F3F3
	//background:#F2F3F3 url(mockup-home.png) no-repeat
	color:#787878
	height:100%
	min-width:1250px
	//test

h2
	color:#E00024
h3
	color:#00314D

.button
	background:#E00024
	color:#fff
	padding:.4em
	display:inline-block
	cursor:pointer
.button:after
	content:" >"
.button-big
	font-size:21px
.header
	position:fixed
	width:100%
	top:0
	left:0
.header-top
	height:48px
	text-align:right
	padding-right:80px
	padding-top:18px
	a
		color:inherit
		text-decoration:none	
.header-bottom
	background:#E00024

.ristourne
	color:#fff
	background:#00314D
	position:fixed
	top:0
	right:160px
	width:120px
	text-align:center
	padding-top:48px
.ristourne .button
	width:100%
	border-top:solid 1px
.ristourne-ammount
	font-size:30px
.page
	height:100%
.main-text
	float:right
	width:50%
	text-align:center
	padding:80px
	height:100%
	padding-top:170px
.side-image
	float:left
	text-align:center
	width:50%
.side-image img
	max-width:100%
.header-bottom img
	margin-top:-6px
	margin-bottom:-6px
	padding-left:58px
.footer
	background:#464747
	padding:20px 80px
	width:100%
	position:fixed
	bottom:0
	left:0
	font-size:14px
	a
		color:inherit
		text-decoration:none
		margin-left:8px
		padding-left:8px
		border-left:solid 1px
		&:first-child
			margin-left:0
			padding-left:0
			border-left:none
.footer-copy
	float:right